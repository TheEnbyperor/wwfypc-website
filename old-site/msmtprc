defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
syslog         on

# Gmail
account        smtp
host           mail.fluidmedia.wales
auth           on
port           587
from           noreply@wewillfixyourpc.co.uk
user           noreply@wewillfixyourpc.co.uk
passwordeval   "cat /secrets/email/email_password"

# Set a default account
account default : smtp
aliases /etc/aliases